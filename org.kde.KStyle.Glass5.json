{
  "id": "org.kde.KStyle.Glass",
  "branch": "5.15-24.08",
  "runtime": "org.kde.Platform",
  "build-extension": true,
  "sdk": "org.kde.Sdk",
  "runtime-version": "5.15-24.08",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "Glass",
      "buildsystem": "cmake",
      "builddir": true,
      "config-opts": [
        "-DQT_PLUGINS_DIR=/usr/share/runtime/lib/plugins/Glass",
        "-DCMAKE_INSTALL_PREFIX=/usr/share/runtime/lib/plugins/Glass",
        "-DBUILD_QT6=OFF",
        "-DBUILD_QT5=ON",
        "-DWITH_DECORATIONS=OFF",
        "-DFOR_FLATPAK=ON"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/4v3ngR/Glass",
          "branch": "main"
        }
      ]
    }
  ]
}
